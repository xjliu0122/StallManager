<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.prj2.ViewPaymentStatusActivity" >

    <TextView
        android:id="@+id/psTextViewPaymentStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:paddingBottom="30dp" 
        android:text="@string/PaymentSuccess"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TableLayout
        android:id="@+id/view_transactions_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/psTextViewPaymentStatusLabel" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/DateLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/PaymentStatusTableDateHeader" 
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/TotalLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/PaymentStatusTableTotalHeader" 
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/GoldStatusLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/PaymentStatusTableGoldHeader" 
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/RewardsAppliedLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/PaymentStatusTableRewardsAppliedHeader" 
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/RewardEarnedLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/PaymentStatusTableRewardEarnedHeader" 
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/psDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="" 
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/psTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/psGoldStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/psRewardsApplied"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <TextView
                android:id="@+id/psRewardsEarned"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/view_transactions_table"
      android:orientation="vertical" > 
	    <LinearLayout 
	      android:id="@+id/psTotalRewardsLayout"
	 	    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="60dp"
		    android:paddingLeft="20dp"
		    android:paddingRight="2dp"
		    android:paddingStart="20dp"
		    android:paddingEnd="20dp"
		    android:orientation="horizontal" >
		    <TextView
		      android:id="@+id/psTotalRewardsLabel"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_weight="2"
		      android:paddingLeft="2dp"
	        android:paddingRight="2dp"
		      android:text="@string/CurrentRewards" 
		      android:textAppearance="?android:attr/textAppearanceSmall" />
		    <TextView
		      android:id="@+id/psTotalRewards"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_weight="4"
		      android:text=""
		      android:textAppearance="?android:attr/textAppearanceSmall"/>
	    </LinearLayout>
	    <LinearLayout 
	      android:id="@+id/psGoldStatusLayout"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingTop="20dp"
	      android:paddingLeft="20dp"
	      android:paddingRight="2dp"
	      android:paddingStart="20dp"
	      android:paddingEnd="20dp"
	      android:orientation="horizontal" >
	      <TextView
	        android:id="@+id/psGoldStatusLabel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:paddingLeft="2dp"
	        android:paddingRight="2dp"
	        android:text="@string/GoldStatus" 
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	      <TextView
	        android:id="@+id/psGoldStatusValue"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
	    </LinearLayout>
	    <LinearLayout 
	      android:id="@+id/psYearlyTotalLayout"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:paddingTop="20dp"
	      android:paddingLeft="20dp"
	      android:paddingRight="2dp"
	      android:paddingStart="20dp"
	      android:paddingEnd="20dp"
	      android:orientation="horizontal" >
	      <TextView
	        android:id="@+id/psYearlyTotalLabel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:paddingLeft="2dp"
	        android:paddingRight="2dp"
	        android:text="Amount Spent This Year" 
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	      <TextView
	        android:id="@+id/psYearlyTotal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
	    </LinearLayout>
	    <Button
	        android:id="@+id/viewCustomerHomeBtn"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingTop="20dp"
	        android:text="@string/Home"
	        android:onClick="goHome"/>
    </LinearLayout>
</RelativeLayout>
